// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Run Vscode Extension in VS Code",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}",
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/vscode-extension.js",
				"${workspaceFolder}/dist/**/vscode-extension.js.map"
			],
			"preLaunchTask": "npm: vscode:watch",
			"type": "extensionHost",
			"debugWebWorkerHost": true,
		},
		{
			"name": "Run Theia Extension in VS Code",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}",
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/theia-extension.js",
				"${workspaceFolder}/dist/**/theia-extension.js.map"
			],
			"preLaunchTask": "npm: theia:watch",
			"type": "extensionHost",
			"debugWebWorkerHost": true,
		}
	]
}
