{
	"name": "simplicite-vscode",
	"publisher": "simpliciteExtensionTest",
	"displayName": "simplicite-vscode",
	"description": "Making life easier for simplicite's designers in an IDE environment",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.59.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished",
		"onCommand:simplicite-vscode.authenticate",
		"onCommand:simplicite-vscode.synchronize",
		"onCommand:simplicite-vscode.logout",
		"onCommand:simplicite-vscode.connectedInstance",
		"onCommand:simplicite-vscode.logoutFromModule",
		"onCommand:simplicite-vscode.logInModule"
	],
	"main": "./src/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "simplicite-vscode.login",
				"title": "Simplicite: Log in"
			},
			{
				"command": "simplicite-vscode.synchronize",
				"title": "Simplicite: Synchronization"
			},
			{
				"command": "simplicite-vscode.logout",
				"title": "Simplicite: Log out"
			},
			{
				"command": "simplicite-vscode.connectedInstance",
				"title": "Simplicite: Get list of connected instance"
			},
			{
				"command": "simplicite-vscode.logoutFromModule",
				"title": "Simplicite: Log out from a specific module"
			},
			{
				"command": "simplicite-vscode.logInModule",
				"title": "Simplicite: Log into a specific module"
			}
		]
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"@types/vscode": "^1.59.0",
		"eslint": "^7.27.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	},
	"dependencies": {
		"simple-git": "^2.45.0",
		"simplicite": "^1.1.26",
		"xml2js": "^0.4.23"
	},
	"repository": {  
		"type": "git",
		"url": "https://github.com/simplicitesoftware/simplicite-vscode.git"
	}
}
