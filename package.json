{
	"name": "simplicite-vscode-tools",
	"publisher": "simpliciteSoftware",
	"displayName": "Simplicite VSCode tools",
	"description": "Simplicite low code platform tools to make life easier for designers in an IDE environment",
	"version": "1.0.0",
	"engines": {
		"vscode": "^1.60.0"
	},
	"license": "Apache-2.0",
	"icon": "icon.png",
	"categories": [
		"Other"
	],
	"keywords": [
		"simplicite",
		"simplicite extension",
		"low code"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"views": {
			"explorer": [
				{
					"id": "simpliciteObjectFields",
					"name": "Simplicite object info"
				},
				{
					"id": "simpliciteFile",
					"name": "Simplicite modified file handler"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "simplicite-vscode.refreshTreeView",
					"when": "view == simpliciteObjectFields",
					"group": "navigation"
				}
			],
			"commandPalette": [
				{
					"command": "simplicite-vscode.itemLabelToClipBoard",
					"when": "false"
				},
				{
					"command": "simplicite-vscode.descriptionToClipBoard",
					"when": "false"
				}
			],
			"view/item/context": [
				{
					"command": "simplicite-vscode.itemLabelToClipBoard",
					"when": "view == simpliciteObjectFields && viewItem == label&description || viewItem == label"
				},
				{
					"command": "simplicite-vscode.descriptionToClipBoard",
					"when": "view == simpliciteObjectFields && viewItem == label&description"
				},
				{
					"command": "simplicite-vscode.dontApplyFile",
					"when": "view == simpliciteFile && viewItem == file"
				},
				{
					"command": "simplicite-vscode.removeFileFromChangedFiles",
					"when": "view == simpliciteFile && viewItem == file"
				},
				{
					"command": "simplicite-vscode.addFileToChangedFiles",
					"when": "view == simpliciteFile && viewItem == untrackedFile"
				},
				{
					"command": "simplicite-vscode.removeFileFromChangedFiles",
					"when": "view == simpliciteFile && viewItem == untrackedFile"
				},
				{
					"command": "simplicite-vscode.applySpecificModule",
					"when": "view == simpliciteFile && viewItem == module",
					"group": "inline"
				}
			]
		},
		"commands": [
			{
				"command": "simplicite-vscode.applyChanges",
				"title": "Simplicite: Apply changes"
			},
			{
				"command": "simplicite-vscode.applySpecificModule",
				"title": "Simplicite: Apply specific module changes",
				"icon": {
					"light": "resources/light/file-upload.svg",
					"dark": "resources/dark/file-upload.svg"
				}
			},
			{
				"command": "simplicite-vscode.compileWorkspace",
				"title": "Simplicite: Compile java code in current workspace"
			},
			{
				"command": "simplicite-vscode.logIn",
				"title": "Simplicite: Log into detected instances"
			},
			{
				"command": "simplicite-vscode.logInInstance",
				"title": "Simplicite: Log into specific instance"
			},
			{
				"command": "simplicite-vscode.logOut",
				"title": "Simplicite: Log out from all instances"
			},
			{
				"command": "simplicite-vscode.logOutFromInstance",
				"title": "Simplicite: Log out from specific instance"
			},
			{
				"command": "simplicite-vscode.refreshTreeView",
				"title": "Simplicite: Refresh object fields Tree View",
				"icon": {
					"light": "resources/light/refresh.svg",
					"dark": "resources/dark/refresh.svg"
				}
			},
			{
				"command": "simplicite-vscode.itemLabelToClipBoard",
				"title": "copy label",
				"icon": {
					"light": "resources/light/copy.svg",
					"dark": "resources/dark/copy.svg"
				}
			},
			{
				"command": "simplicite-vscode.descriptionToClipBoard",
				"title": "copy description",
				"icon": {
					"light": "resources/light/copybis.svg",
					"dark": "resources/dark/copybis.svg"
				}
			},
			{
				"command": "simplicite-vscode.dontApplyFile",
				"title": "Simplicite: Untrack file"
			},
			{
				"command": "simplicite-vscode.removeFileFromChangedFiles",
				"title": "Simplicite: Mark file as unmodified"
			},
			{
				"command": "simplicite-vscode.addFileToChangedFiles",
				"title": "Simplicite: Track file"
			}
		],
		"capabilities": {
			"completionProvider": {
				"resolveProvider": "true",
				"triggerCharacters": [
					"\""
				]
			}
		},
		"configuration": {
			"properties": {
				"simplicite-vscode.disableCompilation": {
					"type": "boolean",
					"default": false,
					"description": "Disable local compilation before applying changes."
				},
				"simplicite-vscode.disableAutoConnect": {
					"type": "boolean",
					"default": false,
					"description": "Disable the automatic authentication when starting vscode. Note that you have to be authenticated in order to take profit of the extension features."
				}
			}
		},
		"keybindings": [
			{
				"command": "simplicite-vscode.showSimpliciteCommands",
				"key": "Ctrl+Shift+space",
				"mac": "Ctrl+Shift+space",
				"linux": "Ctrl+Shift+space"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "npm run test-compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/copy-paste": "^1.1.30",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"@types/vscode": "^1.60.0",
		"@types/xml2js": "^0.4.9",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"eslint": "^7.27.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"ts-loader": "^9.2.2",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2",
		"webpack": "^5.38.1",
		"webpack-cli": "^4.7.0"
	},
	"dependencies": {
		"copy-paste": "^1.3.0",
		"simplicite": "^1.1.27",
		"winston": "^3.3.3",
		"xml2js": "^0.4.23"
	},
	"extensionDependencies": [
		"redhat.java"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/simplicitesoftware/simplicite-vscode.git"
	}
}
